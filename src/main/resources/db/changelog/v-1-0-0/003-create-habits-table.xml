<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.29.xsd">

    <changeSet id="create-habits-table" author="kinzorc">
        <createTable tableName="habits" schemaName="app_schema" ifNotExists="true">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="habit_name" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR">
                <constraints nullable="false"/>
            </column>
            <column name="frequency" type="VARCHAR(25)">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="start_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="end_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="execution_period" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="streak" type="SMALLINT">
                <constraints nullable="false" checkConstraint="streak >= 0"/>
            </column>
            <column name="execution_percentage" type="SMALLINT">
                <constraints nullable="false" checkConstraint="execution_percentage >= 0"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="add-foreign-key-habits" author="kinzorc">
        <addForeignKeyConstraint
                baseTableName="habits"
                baseColumnNames="user_id"
                baseTableSchemaName="app_schema"
                constraintName="fk_habits_user_id_id_users"
                referencedTableName="users"
                referencedColumnNames="id"
                referencedTableSchemaName="app_schema"
                onDelete="CASCADE"/>
    </changeSet>

    <changeSet id="create-habit-executions" author="kinzorc">
        <createTable tableName="habit_executions" schemaName="app_schema">
            <column name="habit_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="date" type="DATE">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="add-foreign-key-habit-executions" author="kinzorc">
        <addForeignKeyConstraint
                baseTableName="habit_executions"
                baseColumnNames="habit_id"
                constraintName="fk_habit_executions_habit_id_id_habits"
                referencedTableName="habits"
                referencedColumnNames="id"
                baseTableSchemaName="app_schema"
                referencedTableSchemaName="app_schema"
                onDelete="CASCADE"/>
    </changeSet>

</databaseChangeLog>